{
  "workbench.localHistory.exclude": {
    ".venv/*": true
  },
  "files.exclude": {
    "**/.vgenv": true
  },
  "files.watcherExclude": {
    "**/.venv/": true
  },
  "search.exclude": {
    "**/.venv": true
  },
  "explorer.excludeGitIgnore": false,
  "python.envFile": "${workspaceFolder}/.env",
  "python.analysis.extraPaths": ["__pypackages__/3.11/lib", ".venv/lib/python3.11/site-packages"],
  "python.linting.ignorePatterns": ["**/site-packages/**/*.py", ".vscode/*.py", "**/.venv/**"],
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "isort.args": [
    "--profile",
    "black"
  ],
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#e8d2ff",
    "activityBar.background": "#e8d2ff",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#df6d00",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#15202b99",
    "sash.hoverBorder": "#e8d2ff",
    "statusBar.background": "#cf9fff",
    "statusBar.foreground": "#15202b",
    "statusBarItem.hoverBackground": "#b56cff",
    "statusBarItem.remoteBackground": "#cf9fff",
    "statusBarItem.remoteForeground": "#15202b",
    "titleBar.activeBackground": "#cf9fff",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveBackground": "#cf9fff99",
    "titleBar.inactiveForeground": "#15202b99"
  },
  "peacock.color": "#CF9FFF"
}
